<!--  This page includes add surveys section ---->

<!-- main ---->
<main class="surveys-container">
    <h1 id="add-h1"><%= title %></h1>
    <!-- add contact information ---->
    <div class="row" id="add-form">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <br>
                    <!-- add user---->
                    <label for="nameTextField">User</label>
                    <input type="text" class="form-control"
                    id="nameTextField" 
                    placeholder="Enter your name"
                    name="name" required></input>
                </div>
            
                <!-- add survey name---->
                <div class="form-group">
                    <label for="surveyNameTextField">Survey Name</label>
                    <input type="text" class="form-control"
                    id="surveyNameTextField" 
                    placeholder="Enter Survey Name"
                    name="surveyName" required></input>
                </div>

                <!-- add email---->
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField" 
                    placeholder="Enter your email address"
                    name="email" required></input>
                </div>

                <!-- Survey type---->
                <div class="form-group">
                    <label for="typeTextField">Survey Type </label>
                    <input type="text" class="form-control"
                    id="typeTextField" 
                    value="Short Answer" 
                    name="surveyType" 
                    readonly></input>
                </div>
                <br>
            </div>
           <!-- add questions---->
           <div class="questions">
                <div class="form-group">
                    <label for="q1ShortAnswerTextField">Question 1</label>
                    <input type="text" class="form-control" id="q1ShortAnswerTextField" placeholder="Add your question" name="q1ShortAnswer" >
                    <label for="a1ShortAnswerTextField">Short Answer</label>
                    <input type="text" class="form-control" id="a1ShortAnswerTextField" placeholder="Add your answer" name="a1ShortAnswer" >
                </div>
                <br>
                <div class="form-group">
                    <label for="q2ShortAnswerTextField">Question 2</label>
                    <input type="text" class="form-control" id="q2ShortAnswerTextField" placeholder="Add your question" name="q2ShortAnswer" >
                    <label for="a2ShortAnswerTextField">Short Answer</label>
                    <input type="text" class="form-control" id="a2ShortAnswerTextField" placeholder="Add your answer" name="a2ShortAnswer" >
                </div>
                <br>
                <div class="form-group">
                    <label for="q3ShortAnswerTextField">Question 3</label>
                    <input type="text" class="form-control" id="q3ShortAnswerTextField" placeholder="Add your question" name="q3ShortAnswer">
                    <label for="a3ShortAnswerTextField">Short Answer</label>
                    <input type="text" class="form-control" id="a3ShortAnswerTextField" placeholder="Add your answer" name="a3ShortAnswer" >
                </div>
                <br>
                <div class="form-group">
                    <label for="q4ShortAnswerTextField">Question 4</label>
                    <input type="text" class="form-control" id="q4ShortAnswerTextField" placeholder="Add your question" name="q4ShortAnswer" >
                    <label for="a4ShortAnswerTextField">Short Answer</label>
                    <input type="text" class="form-control" id="a4ShortAnswerTextField" placeholder="Add your answer" name="a4ShortAnswer" >
                </div>
                <br>
                <div class="form-group">
                    <label for="q5ShortAnswerTextField">Question 5</label>
                    <input type="text" class="form-control" id="q5ShortAnswerTextField" placeholder="Add your question" name="q5ShortAnswer" >
                    <label for="a5ShortAnswerTextField">Short Answer</label>
                    <input type="text" class="form-control" id="a5ShortAnswerTextField" placeholder="Add your answer" name="a5ShortAnswer" >
                </div>
                 <br>
                 <br>
                 <!-- submit and cancel buttons -->
                 <button class="btn btn-primary" type="submit" id="submit-btn">
                     <i class="fas fa-edit"></i>
                     Submit
                 </button>
                 <a href="/surveys-list" class="btn btn-warning">
                     <i class="fas fa-undo"></i>
                     Cancel
                 </a>
                </div>
           </form>
        </div>
    </div>
</main>



