<!--  This page includes add surveys section ---->

<!-- main ---->
<main class="surveys-container">
    <h1 id="add-h1"><%= title %></h1>
    <!-- add contact information ---->
    <div class="row" id="add-form">
        <div class="offset-md-3 col-md-6">
            <form class="form" method="POST">
                <div class="form-group">
                    <br>
                    <!-- add user---->
                    <label for="nameTextField">User</label>
                    <input type="text" class="form-control"
                    id="nameTextField" 
                    placeholder="Enter your name"
                    name="name" required></input>
                </div>
                <!-- add survey name---->
                <div class="form-group">
                    <label for="surveyNameTextField">Survey Name</label>
                    <input type="text" class="form-control"
                    id="surveyNameTextField" 
                    placeholder="Enter Survey Name"
                    name="surveyName" required></input>
                </div>

                <!-- add email---->
                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField" 
                    placeholder="Enter your email address"
                    name="email" required></input>
                </div>

                <!-- Survey type---->
                <div class="form-group">
                    <label for="typeTextField">Survey Type </label>
                    <input type="text" class="form-control"
                    id="typeTextField" 
                    value="Dropdown Options" name="surveyType" readonly></input>
                </div>
                <br>
            </div>
    
            <!-- add questions  -->
           <div class="questions">
                <div class="form-group">
                    <label for="q1DropdownTextField">Question 1</label>
                    <input type="text" class="form-control" id="q1DropdownTextField" placeholder="Add your question" name="q1Dropdown">
                    <!-- Dropdown for options -->
                    <div class="form-check">
                        <label for="q1OptionDropdown" >Select an option:</label>
                        <select class="form-control" id="q1OptionDropdown" name="q1Option">
                            <option value="" disabled selected>Yes/No</option>
                            <option value="Option 1" name="q1DropdownOption1" >Yes</option>
                            <option value="Option 2" name="q1DropdownOption2" >No</option>
                        </select>  
                    </div>
                </div>
            <br>
                <div class="form-group">
                    <label for="q2DropdownTextField">Question 2</label>
                    <input type="text" class="form-control" id="q2TextField" placeholder="Add your question" name="q2Dropdown">
