                        </select>  
                    </div>
                </div>
            <br>
                <div class="form-group">
                    <label for="q5DropdownTextField">Question 5</label>
                    <input type="text" class="form-control" id="q5TextField" placeholder="Add your question" name="q5Dropdown">
                    <!-- Dropdown for options -->
                    <div class="form-check">
                        <label for="q5OptionDropdown" >Select an option:</label>
                        <select class="form-control" id="q5OptionDropdown" name="q5Option">
                            <option value="" disabled selected>Yes/No</option>
                            <option value="Option 1" name="q5DropdownOption1">Yes</option>
                            <option value="Option 2" name="q5DropdownOption2">No</option>
                        </select>  
                    </div>
                </div>
                <br> <br>
            <!-- submit and cancel buttons -->
            <button class="btn btn-primary" type="submit" id="submit-btn">
                <i class="fas fa-edit"></i>
                Submit
            </button>
            <a href="/surveys-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>
                Cancel
            </a>
        </div>
    </form>
</main>



